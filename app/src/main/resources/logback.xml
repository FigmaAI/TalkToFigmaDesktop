<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Colorful Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{HH:mm:ss.SSS} %-5level [%thread] %-40.40logger{40} | %msg%n</pattern>
        </encoder>
        <!-- removed jansi library completely (solved signing issue) -->
        <!-- <withJansi>true</withJansi> -->
    </appender>

    <!-- JSON Console appender for structured logging -->
    <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>
                <logLevel/>
                <loggerName/>
                <message/>
                <mdc/>
                <stackTrace/>
            </providers>
            <jsonGeneratorDecorator class="net.logstash.logback.decorate.PrettyPrintingJsonGeneratorDecorator"/>
        </encoder>
    </appender>

    <!-- Async appender for better performance -->
    <appender name="ASYNC_CONSOLE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="CONSOLE"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
    </appender>

    <!-- File appender for UI log viewer -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${java.io.tmpdir}/TalkToFigmaDesktop.log</file>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level [%thread] %-40.40logger{40} | %msg%n</pattern>
        </encoder>
    </appender>

    <!-- WebSocket Server specific logger with enhanced output -->
    <logger name="kr.co.metadata.mcp.server.WebSocketServer" level="DEBUG" additivity="false">
        <appender-ref ref="ASYNC_CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- MCP Server specific logger -->
    <logger name="kr.co.metadata.mcp.server.McpServer" level="INFO" additivity="false">
        <appender-ref ref="ASYNC_CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Google Analytics logger set to DEBUG level for testing -->
    <logger name="kr.co.metadata.mcp.analytics.GoogleAnalyticsService" level="DEBUG" additivity="false">
        <appender-ref ref="ASYNC_CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="ASYNC_CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration> 